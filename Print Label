<?xml version="1.0" encoding="utf-8" ?>
<j:jelly trim="false" xmlns:j="jelly:core" xmlns:g="glide" xmlns:j2="null" xmlns:g2="null">
    <g:evaluate>
        var usersValue = RP.getParameterValue('sysparm_users');
        //var users = usersValue.split(',');
		
        var user = new GlideRecord('x_waem2_vms_m2m_external_users_visits');
        user.addActiveQuery();
        user.addQuery('sys_id','IN',usersValue);
        user.query();
		
        var userStr = new GlideRecord('x_waem2_vms_m2m_external_users_visits');
        userStr.addActiveQuery();
        userStr.addQuery('sys_id','IN',usersValue);
        userStr.query();
		
        var date = new GlideDate();
        var msg = "Do you want to print visitor badges for all selected guests? ";
		
        while(userStr.next()) {
			msg += userStr.external_user.u_name;
			if(userStr.hasNext()) {
				msg += ', ';
			}
        }
    </g:evaluate>

    <script>
    if (confirm('${msg}')) {
        window.print();
    }
    </script>

    <j:while test="${user.next()}">
        <div class="label-boarder">
            <div class="label-container">
			<div class="wm-header-image"> 
				
<img src="watermark_logo.jpgx" style="visibility:hidden;" /> 
</div>
                    <div class="wm-header-label">
                        VISITOR
                    </div>
                    <div style="clear:both;"></div>
                    <div class="wm-body">
                        <div class="wm-body-bold">
                            ${user.external_user.u_name}
                        </div>
                        <j:if test="${user.external_user.u_company.toString() != ''}">
                            <div>
                                ${user.external_user.u_company.name.toString()}
                            </div>
                        </j:if>
                        <div>
                            ${date}
                        </div>
                        <div>
                            Host: ${user.visit.host.name}
                        </div>
                        <div class="wm-body-bold">
                            ** Escort Required **
                        </div>
                    </div>
                    <j:if test="${user.hasNext()}">
                        <div class="wm-footer"></div>
                    </j:if>
                </div>
            </div>
    </j:while>

